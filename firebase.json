{
  "hosting": [
    {
      "target": "main",
      "public": "src/app",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/page.tsx"
        }
      ]
    },
    {
      "target": "placeholder",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  ],
  "functions": {
    "source": ".",
    "runtime": "nodejs18"
  }
} 